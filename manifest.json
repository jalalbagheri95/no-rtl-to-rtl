{
  "manifest_version": 2,
  "name": "No RTL to RTL",
  "version": "1.0",
  "description": "Force ChatGPT interface to use RTL and Persian language.",
  "icons": {
    "48": "icons/icon.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://chat.openai.com/*", "*://chatgpt.com/*"],
      "js": ["nortltortl.js"],
      "css": ["rtl.css"]
    }
  ]
}
